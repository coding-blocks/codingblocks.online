<section>
	<div class="container-main" style="margin-top: 100px">
		<div class="heading-container">
			{{#if user}}
			<h2 class="heading-main"> Enroll to Courses via OTP </h2>
			<hr class="text">
			<table style="margin: 0 auto;" cellpadding="20px">
				{{#if (not sentOTP)}}
					<tr>
						<td>Email: </td>
						<td colspan="2">{{input type="text" value=email placeholder="Enter you registered email" size="30"}}</td>
					</tr>
					<tr>
						<td colspan="3">
							{{#if sendOtpTask.isRunning}}
								<button class="custom-btn">
									<span class="spinner"></span>
								</button>
							{{else}}
								<button class="custom-btn" onclick={{perform sendOtpTask}}> 	Send OTP 
								</button>
							{{/if}}
						</td>
					</tr>
				{{else}}
					<tr>
						<td>OTP: </td>
						<td>{{input type="text" value=otp placeholder="Enter the OTP as recieved in the email" size="40"}}</td>
					</tr>
					<tr>
						<td colspan="2">
							{{#if verifyOtpTask.isRunning}}
							<button class="custom-btn">
								<span class="spinner"></span>
							</button>
							{{else}}
							<button class="custom-btn" onclick={{perform verifyOtpTask}} > Enroll </button>
							{{/if}}
						</td>
					</tr>
				{{/if}}
			</table>
			{{else}}
				<h2 class="heading-main"> You need to be logged In first! </h2>
				<hr class="text">
			{{/if}}

			{{#if error}}
				<p style="color: red">{{error}}</p>
			{{/if}}
		</div>
	</div>
</section>