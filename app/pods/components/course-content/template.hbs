<p class="accordion-wrapper" data-toggle="collapse" data-parent="#accordion" href="#collapse{{index}}" {{action "toggling" index on="click"}}>
  <div class="panel panel-default">
    <div class="panel-heading" >
      <h4 class="panel-title">
        <div>
        {{section.name}}<i class="fa fa-plus toggleicon" id="plus{{index}}" aria-hidden="true"></i></div>
      </h4>
    </div>
    <div id="collapse{{index}}" class="panel-collapse collapse in">
      <div class="panel-body">
        <div class="sub-topic">
          {{#each contents as |content index|}}
            <div class="sub-wrapper"><i class="fa fa-book" aria-hidden="true"></i>{{content.payload.name}}</div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</p>
